---
import BaseLayout from "../layouts/BaseLayout.astro";
import Catalogue from "../components/Catalogue.svelte";
import { getAllAlbums, getAllAppearsOn } from "../utils/data";

const {origin } = new URL(Astro.url.pathname, Astro.site);
const albums = await getAllAlbums(origin);
const appearsOn = await getAllAppearsOn();
---
<BaseLayout title="Maria Due - Catalogue">
  <Catalogue {albums} {appearsOn} />
</BaseLayout>
