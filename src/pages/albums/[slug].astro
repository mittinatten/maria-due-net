---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Album from "../../components/Album.svelte";
import { getAllAlbums, getAlbumBySlug } from "../../utils/data";
import type { BreadCrumb } from "../../types";


const { slug } = Astro.request.params;

export async function getStaticPaths() {
  const albums = await getAllAlbums();
  return albums.map(album => ({ params: { slug: album.path.split('/').pop() } }));
};

const album = await getAlbumBySlug(slug);
const breadCrumb: BreadCrumb = [{ path: "/catalogue", title: "Catalogue"}, album ];
---

<BaseLayout title={"Maria Due - " + album.title + " (album)"} {breadCrumb}>
  <Album {album} />
</BaseLayout>
